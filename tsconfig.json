{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ESNext"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}